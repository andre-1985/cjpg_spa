                    </div>
                {% endfor %}
            {% endif %}
            {% if userSelection.starsSelection is defined %}
                {% for starSelection in userSelection.starsSelection %}
                    <div class="flex justify-center items-center bg-gold_star bg-no-repeat bg-contain font-bold w-14 h-14 leading-14 text-white mx-1 pt-1">
                        {{ starSelection }}
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</div>
